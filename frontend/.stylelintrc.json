{
  "defaultSeverity": "error",
  "extends": "stylelint-config-standard",
  "rules": {
    "no-empty-source": null,
    "selector-pseudo-element-no-unknown": [
      true,
      {
        "ignorePseudoElements": ["ng-deep"]
      }
    ],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["function", "if", "each", "include", "mixin", "for", "return", "else"]
      }
    ]
  }
}
